{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/truthbench/:path*",
      "destination": "https://truth-bench.onrender.com/api/truthbench/:path*"
    },
    {
      "source": "/api/kalshi/:path*",
      "destination": "https://truth-bench.onrender.com/api/kalshi/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://truth-bench-db.onrender.com/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://truth-bench.onrender.com/health"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
